<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:id="@+id/sizeInfoBox"
        android:background="#FF9800"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_headset_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/sizeInfoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/playpause"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#898989">
        </ImageView>
        <ProgressBar
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/progressbar"
            android:layout_toRightOf="@id/playpause"
            android:layout_toLeftOf="@id/eventbutton"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ProgressBar>
        <RelativeLayout
            android:id="@+id/eventbutton"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:id="@+id/imageup"
                android:background="@drawable/media_type_background"
                android:src="@drawable/download"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#FFFFFF">
            </ImageView>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/progressbutton"
                android:visibility="gone"
                android:background="@drawable/circular_button_background"
                app:spinning_bar_width="4dp"
                app:spinning_bar_color="#000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>