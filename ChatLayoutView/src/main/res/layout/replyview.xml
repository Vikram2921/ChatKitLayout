<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@drawable/reply_background"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="60dp">
    <View
        android:id="@+id/bar"
        android:background="@color/green"
        android:layout_width="4dp"
        android:layout_height="match_parent">
    </View>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/preview"
        android:orientation="vertical"
        android:layout_toRightOf="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vikram Singh Rawat"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/sendername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:text="Photo"
            android:drawableTint="#818181"
            android:drawableLeft="@drawable/ic_baseline_image_24"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:id="@+id/message"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818181"></TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/preview"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_alignParentRight="true"
        android:layout_width="70dp"
        android:layout_height="match_parent">
    </ImageView>
</RelativeLayout>
