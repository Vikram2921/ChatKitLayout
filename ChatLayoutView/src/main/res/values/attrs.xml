<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChatLayoutView">
        <attr name="view_mode">
            <enum name="RecyclerView" value="0"></enum>
            <enum name="ListView" value="1"></enum>
        </attr>
        <attr name="useDatabase" format="boolean"></attr>
        <attr name="chatLimit" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="ChatMessageView">
        <attr name="chat_direction" format="enum">
            <enum name="Left" value="0"></enum>
            <enum name="Right" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>