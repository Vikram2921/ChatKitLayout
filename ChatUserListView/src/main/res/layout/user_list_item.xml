<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:id="@+id/layout"
    android:background="@drawable/custom_ripple"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:civ_circle_background_color="#000"
        app:civ_border_width="0dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/name"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14dp"
        android:text="Vikram Singh Rawat"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/lastemessage"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@id/circleImageView"></TextView>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@id/name"
        android:id="@+id/status"
        app:layout_constraintRight_toLeftOf="@id/lastemessage"
        android:src="@drawable/waiting"
        android:padding="2dp"
        android:layout_width="20dp"
        app:layout_constraintBottom_toBottomOf="@id/circleImageView"
        android:layout_height="20dp">
    </ImageView>

    <TextView
        android:id="@+id/lastemessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="12dp"
        android:text="this is my last message sdf df dsfds f dsf sdf ds f df d f df df ds fd fds fd sf"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintRight_toLeftOf="@id/unreadmessagecount"
        app:layout_constraintStart_toEndOf="@id/status"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@id/circleImageView"></TextView>
    <TextView
        android:id="@+id/unreadmessagecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:text="34"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@drawable/round_unread"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toLeftOf="@id/lastemessage"
        app:layout_constraintTop_toTopOf="@id/lastemessage"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/lastdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yesterday"
        android:textColor="#757575"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/name"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"></com.github.curioustechizen.ago.RelativeTimeTextView>
    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/circleImageView"
        android:background="@drawable/line_divider"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>